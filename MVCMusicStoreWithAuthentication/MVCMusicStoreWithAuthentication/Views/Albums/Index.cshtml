@model IEnumerable<MVCMusicStoreWithAuthentication.Models.Album>

@{
    ViewBag.Title = "Albums Home";
}

<h2>@ViewBag.Title</h2>

<p><strong>These are the latest @Model.Count() Albums</strong></p>
<p><strong>@@VirtualPath: @VirtualPath</strong></p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Band.BandName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlbumId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlbumId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlbumId })
        </td>
    </tr>
}

</table>
