@model IEnumerable<MVCMusicStoreWithAuthentication.Models.Band>

@{
    ViewBag.Title = "Bands Home";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BandId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Website)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BandId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BandId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BandId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BandId })
        </td>
    </tr>
}

</table>
